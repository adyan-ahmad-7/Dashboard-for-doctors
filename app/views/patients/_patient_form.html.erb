<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-2xl shadow-md border">

    <!-- Header -->
    <div class="px-8 py-6 border-b">
      <h2 class="text-2xl font-semibold text-gray-800">
        New Patient
      </h2>
      <p class="text-sm text-gray-500 mt-1">
        Fill in the patient details below
      </p>
    </div>

    <!-- Form -->
    <div class="p-8">
      <%= form_with model: @patient, url: patients_path, method: :post , local: true, class: "space-y-6" do |f| %>

        <!-- First Name -->
        <div>
          <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :f_name,
                placeholder: "First name",
                class: "w-full bg-gray-50 border border-gray-400 rounded-xl px-4 py-3 text-gray-800 placeholder-gray-400 hover:border-gray-500 focus:border-blue-500 focus:ring-2 focus:ring-blue-100" %>
        </div>

        <!-- Last Name -->
        <div>
          <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :l_name,
                placeholder: "Last name",
                class: "w-full bg-gray-50 border border-gray-400 rounded-xl px-4 py-3 text-gray-800 placeholder-gray-400 hover:border-gray-500 focus:border-blue-500 focus:ring-2 focus:ring-blue-100" %>
        </div>

        <!-- Gender -->
        <div>
          <%= f.label :gender, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :gender,
                ["Male", "Female", "Other"],
                { prompt: "Select gender" },
                class: "w-full bg-gray-50 border border-gray-400 rounded-xl px-4 py-3 text-gray-800 hover:border-gray-500 focus:border-blue-500 focus:ring-2 focus:ring-blue-100" %>
        </div>

        <!-- Date of Birth -->
        <div>
          <%= f.label :date_of_birth, "Date of Birth", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :date_of_birth,
                class: "w-full bg-gray-50 border border-gray-400 rounded-xl px-4 py-3 text-gray-800 hover:border-gray-500 focus:border-blue-500 focus:ring-2 focus:ring-blue-100" %>
        </div>

        <!-- Divider -->
        <div class="pt-6 border-t"></div>

        <!-- Actions -->
        <div class="flex justify-end gap-4">
          <%= link_to "Cancel", doctor_dashboards_path,
                class: "px-6 py-3 rounded-xl border border-gray-300 text-gray-600 hover:bg-gray-100 transition" %>

          <%= f.submit "Save Patient", data:{alert:"Patient created successfully"},
                class: "px-8 py-3 bg-[#539AEF] text-white rounded-xl font-medium hover:bg-blue-600 transition" %>
        </div>

      <% end %>
    </div>

  </div>
</div>
